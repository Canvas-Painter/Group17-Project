
{
  "manifest_version": 3,
  "name": "Canvas Painter",
  "version": "0.1",
  "description": "Changes to improve Canvas LMS accessibility and efficeny",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*://canvas.oregonstate.edu/*"],
  "background": {
    "funny_name_here": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://canvas.oregonstate.edu/*"],
      "js": ["SideMenu/standardizedSyllabus.js", "sayHello.js", "content.js", "CanvasColors/popup.js"],
      "css": ["styles.css", "SideMenu/standardizedSyllabus.css"],
      "run_at": "document_start"
    }
  ],
  "action":{
    "default_popup": "CanvasColors/popup.html"
  },
  "options_page": "options.html"
}
